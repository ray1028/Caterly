<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />

    <!-- Meta Information -->
    <title>Caterly - Menu</title>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    />

    <!-- External CSS -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link
      rel="stylesheet"
      href="/styles/05_restaurants_layout.css"
      type="text/css"
    />

    <!-- External JS -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

    <!-- App JS -->
    <script type="text/javascript" src="/scripts/app.js"></script>

    <!-- Modal -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script> -->
    <!--  -->

    <!-- font awesome -->
    <script src="https://kit.fontawesome.com/b9ac4525c6.js"></script>

    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Single+Day&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Didact+Gothic&display=swap" rel="stylesheet">

        <!-- helper function -->
        <script type="text/javascript" src="/scripts/data-helper.js"></script>

  </head>

  <body>
    <nav>
      <% include partials/_header %>
      <!-- <a>Navbar</a> -->
    </nav>

    <div class="restaurant-container">
      <div id="menu-container">

        <div class="restaurant-menu">
          <header class="restaurant-banner">
            <img src="<%=restaurant.image_url%>">
            <!-- <h1 class="restaurant-banner-title">
              <%=restaurant.name%>
            </h1> -->
          </header>
          <br>

          <%for(let item of items){ %>
          <article class="menu-item">
              <div class="menu-item-1" data-id="<%=item.id%>"><%=item.name%></div>
              <div class="menu-item-2" data-resto-id="<%=restaurant.id%>">$<%=(item.price / 1000).toFixed(2)%></div>
              <div class="menu-item-3"><%=item.description%></div>
              <!-- <button class="menu-item-addcart btn btn-primary" style="background-color:#DD614A">add to cart</button> -->
          </article>
          <hr>
            <% }%>

        </div>
      </div>
      <div class="restaurant-checkout">
        <div class="restaurant-checkout-main">
          <div class="restaurant-checkout-main-wrapper">
            <div id="checkout-banner">
              <br>
            </div>
            <header>
                <div class="restaurant-checkout-title">
                  <h4>Your Order Summary</h4>
                </div>
            </header>
            <br>

            <article id="restaurant-checkout-items">
            </article>

            <br>

            <div class="restaurant-checkout-cart">
              <div class="restaurant-checkout-cart-subtotal"><p>Subtotal</p><p class="restaurant-checkout-cart-subtotal-box"></p></div>
              <div class="restaurant-checkout-cart-tax"><p>Tax</p><p class="restaurant-checkout-cart-tax-box"></p></div>
              <div class="restaurant-checkout-cart-total"><p>Total</p><p class="restaurant-checkout-cart-total-box"></p></div>
            </div>

            <div class="restaurant-checkout-btn-conatiner">
              <div>
                <form id="checkout" action="/checkout" method="POST">
                  <button id="checkout-btn" style="background-color:#DD614A" type="submit" class="btn btn-success" >
                    Checkout
                  </button>
                </form>
             </div>
             <div>
               <button id="empty-cart-btn" class="btn btn-warning ">Clear Cart</button>
             </div>

            </div>

          </div>
        </div>
      </div>
    </div>

        <!-- The Modal -->
        <div class="modal" id="myModal">
            <div class="modal-dialog">
              <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header" style="background: #DD614A; opacity: 0.85;">
                  <h4 class="modal-title" style="color:white">Order Summary</h4>
                  <button type="button" class="close" data-dismiss="modal">
                    &times;
                  </button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                  <table class="table">
                    <tr>
                      <th scope="col">Item</th>
                      <th scope="col">Description</th>
                      <th scope="col">Quantity</th>
                      <th scope="col">Total</th>
                    </tr>
                    <tr>
                      <td scope="col" id="cart-item">item</td>
                      <td scope="col" id="cart-description">description</td>
                      <td scope="col" id="cart-quantity">
                        <button class="minus-btn" type="button" name="button">
                          <i class="fas fa-minus-square"></i>
                        </button>
                        <input
                          id="cart-quantity-box"
                          style="width:15px"
                          type="text"
                          name="name"
                          value="1"
                          readonly
                        />
                        <button class="plus-btn" type="button" name="button">
                          <i class="fas fa-plus-square"></i>
                        </button>

                      </td>
                      <td scope="col" id="cart-total"></td>
                    </tr>
                  </table>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                  <form id="addtocart" action="" method="">
                    <button id="add-item" style="background-color:#DD614A" type="submit" class="btn btn-primary">
                      Add To Cart
                    </button>
                  </form>
                </div>
              </div>
            </div>
  </body>
</html>
